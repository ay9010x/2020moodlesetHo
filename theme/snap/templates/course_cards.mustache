<div data-hidden="{{^published}}true{{/published}}{{#published}}false{{/published}}" data-courseid="{{courseid}}" data-model="{{model}}" data-href="{{{url}}}" data-shortname="{{shortname}}" class="courseinfo{{#favorited}} favorited{{/favorited}}" style="{{imagecss}}" tab-index="-1"{{#lazyloadimageurl}} data-image-url="{{.}}"{{/lazyloadimageurl}}>
    <button class="snap-icon-toggle favoritetoggle" title="{{toggletitle}}" aria-pressed="{{#favorited}}true{{/favorited}}{{^favorited}}false{{/favorited}}"></button>
    <div class="courseinfo-body">
        <h3><a class="coursefullname" href="{{{url}}}">{{fullname}}</a></h3>
        <div class=dynamicinfo>
            {{#feedback}}
                {{#coursegrade}}
                    <div class="coursegrade">{{#str}}coursegrade, theme_snap{{/str}} <a href="{{feedbackurl}}">{{coursegrade}}</a></div>
                {{/coursegrade}}
            {{/feedback}}
            {{#completion.render}}
            <div class="completionstatus outoftotal">{{#str}}progresstotal, completion, {"complete":{{completion.complete}},"total":{{completion.total}} }{{/str}}<span class="pull-right">{{completion.progress}}%</span></div>
            <div class="completion-line" style="width:{{completion.progress}}%"></div>
            {{/completion.render}}
        </div>
        <div class="courseinfo-teachers">
            <h4 class="sr-only">{{# str }} coursecontacts, theme_snap {{/ str }}</h4>
            <div class="courseinfo-teachers-visible">
                {{#visibleavatars}}
                    {{{.}}}
                {{/visibleavatars}}
                {{#showextralink}}
                    <a class="courseinfo-teachers-more state-visible" href="#">{{hiddenavatarcount}}</a>
                {{/showextralink}}

            </div>
            <div class="courseinfo-teachers-extra">
                {{#hiddenavatars}}
                    {{{.}}}
                {{/hiddenavatars}}
            </div>
        </div>
        {{^published}}
        <small class="published-status text-warning">
            {{# str }} notpublished, theme_snap {{/ str }}
        </small>
        {{/published}}
    </div>
</div>
